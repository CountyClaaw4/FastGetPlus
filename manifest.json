{
  "manifest_version": 3,
  "name": "Fastget+",
  "version": "1.0.0",
  "description": "SpigotプラグインをFastServerに簡単転送するChrome拡張機能",
  "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "downloads"
  ],
  "host_permissions": [
    "https://*.spigotmc.org/*",
    "http://localhost:4001/*"
  ],
  "action": {
    "default_popup": "core/popup.html",
    "default_icon": "images/icon.png",
    "default_title": "Fastget+"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.spigotmc.org/resources/*"
      ],
      "js": ["core/content.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "core/options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "images/*.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
